" Easy version Vimrc
" I kept all the others settings in plugins/settings directory
"
" Eddie Kao
" http://blog.eddie.com.tw
" eddie@digik.com.tw

filetype off
call pathogen#runtime_append_all_bundles()
filetype plugin indent on
call pathogen#infect()
call pathogen#helptags()

" =============
"  custom key
" =============
" add a new line without entering insert mode
noremap <CR> o<Esc>

" map backspce to delete a character
noremap <BS> X

" map ctrl+c and ctrl+v
noremap <C-c> "+y
noremap <C-v> "+P

" cancel searched highlight
noremap ; :nohlsearch<CR>

" Have the mouse enabled all the time:
set mouse=a

" navigating for long lines
map j gj
map k gk
map <UP> gk
map <DOWN> gj
imap <UP> <ESC>gk<RIGHT>i
imap <DOWN> <ESC>gj<RIGHT>i

" Top navigation Setting
" quick save this doc
map <F2> :w<CR>
"nmap <F4> <ESC>:call CloseTab()<CR>
nmap <F4> <ESC>:q<CR>
" next and prev tb
noremap <F7> :tabnew<CR>
noremap <F6> gT
noremap <F8> gt
"nnoremap <silent> <F9> :NERDTreeMirrorToggle<CR>
map <F9> :NERDTreeMirrorToggle<CR>
" open Tags list
map <F12> :TlistToggle<CR>
nmap <C-F12> <ESC>:!ctags -R --c++-kinds=+p --fields=+iaS --extra=+q .<CR>


